{
  "name": "vue-blueprint",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@8.12.0",
  "engineStrict": true,
  "engines": {
    "node": "18 || 20"
  },
  "prettier": "@sit/prettier-config-vue",
  "scripts": {
    "start": "pnpm run dev",
    "dev": "vite",
    "build": "run-p type-check build-only",
    "build:ci": "pnpm build && pnpm package-import-meta-env",
    "test:unit": "vitest",
    "test:unit:ci": "run-p type-check:test \"test:unit --run --coverage\"",
    "test:component": "playwright install && playwright test -c ./tests/component/playwright-ct.config.ts",
    "test:integration": "playwright install && playwright test -c ./tests/integration/playwright.config.ts",
    "build-only": "vite build",
    "package-import-meta-env": "pkg ./node_modules/@import-meta-env/cli/bin/import-meta-env.js -t node18-alpine -o ./dist/import-meta-env-alpine",
    "type-check": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "type-check:test": "vue-tsc --noEmit -p tsconfig.app.json --composite false",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --ignore-path .gitignore",
    "lint:fix": "pnpm run lint --fix",
    "lint:ci": "pnpm run lint --format json --output-file coverage/eslint.report.json",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "storybook": "storybook dev -p 6006",
    "prepare": "simple-git-hooks",
    "preinstall": "npx only-allow pnpm"
  },
  "dependencies": {
    "@scu/core-ui": "^6.27.0",
    "@scu/flags": "^1.2.3",
    "@scu/icons": "^1.4.0",
    "@scu/vue": "^6.27.0",
    "@sit/vue-core": "^2.5.4",
    "@vueuse/core": "^10.7.0",
    "oidc-client-ts": "^2.4.0",
    "pinia": "^2.1.7",
    "vue": "^3.3.11",
    "vue-i18n": "^9.8.0",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@import-meta-env/cli": "~0.6.8",
    "@import-meta-env/typescript": "~0.3.3",
    "@import-meta-env/unplugin": "~0.5.1",
    "@intlify/unplugin-vue-i18n": "^1.6.0",
    "@pinia/testing": "~0.1.3",
    "@playwright/experimental-ct-vue": "^1.40.1",
    "@playwright/test": "^1.40.1",
    "@rushstack/eslint-patch": "^1.6.0",
    "@sit/eslint-config-vue": "^2.0.1",
    "@sit/prettier-config-vue": "^1.1.0",
    "@storybook/addon-actions": "^7.6.4",
    "@storybook/addon-essentials": "^7.6.4",
    "@storybook/vue3": "^7.6.4",
    "@storybook/vue3-vite": "^7.6.4",
    "@tsconfig/node20": "^20.1.2",
    "@types/jsdom": "^21.1.6",
    "@types/node": "^20.10.4",
    "@vitejs/plugin-vue": "^4.5.2",
    "@vitest/coverage-v8": "^1.0.4",
    "@volar/vue-typescript": "^1.6.5",
    "@vue/compiler-dom": "^3.3.11",
    "@vue/test-utils": "^2.4.3",
    "@vue/tsconfig": "~0.4.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.55.0",
    "eslint-plugin-playwright": "~0.20.0",
    "eslint-plugin-storybook": "~0.6.15",
    "eslint-plugin-vue": "^9.19.2",
    "jsdom": "^23.0.1",
    "lint-staged": "^15.2.0",
    "npm-run-all": "^4.1.5",
    "pkg": "^5.8.1",
    "prettier": "^3.1.1",
    "prettier-plugin-organize-imports": "^3.2.4",
    "sass": "^1.69.5",
    "simple-git-hooks": "^2.9.0",
    "storybook": "^7.6.4",
    "typescript": "~5.3.3",
    "vite": "^5.0.8",
    "vite-plugin-run": "~0.5.1",
    "vitest": "^1.0.4",
    "vitest-mock-extended": "^1.3.1",
    "vitest-sonar-reporter": "^1.0.0",
    "vue-tsc": "^1.8.25"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "prettier --write -u",
    "*.{vue,js,ts}": "eslint --fix --ignore-path .gitignore"
  }
}
