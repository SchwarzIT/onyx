{
  "name": "@sit-onyx/docs-app",
  "version": "0.0.1",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/SchwarzIT/onyx",
    "directory": "apps/docs"
  },
  "license": "Apache-2.0",
