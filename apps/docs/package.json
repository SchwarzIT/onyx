    "@sit-onyx/storybook-utils": "workspace:^",
    "@sit-onyx/vitepress-theme": "workspace:^",
    "chart.js": "catalog:",
    "postcss": "^8.5.6",
    "sass-embedded": "catalog:",
    "sit-onyx": "workspace:^",
    "vite": "catalog:",
    "vitepress": "^1.6.4",
    "vue": "catalog:",
    "vue-chartjs": "^5.3.2"
  },
  "engines": {
    "node": ">=20"
  }
