{
  "$schema": "https://turbo.build/schema.json",
  "remoteCache": {
    "apiUrl": "https://turbo-remote-cache.apps.01.cf.eu01.stackit.cloud",
    "teamSlug": "onyx",
    "enabled": true
  },
  "globalDependencies": ["pnpm-lock.yaml"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "src/.vitepress/dist/**"]
    },
    "build:storybook": {
      "dependsOn": ["build"],
      "outputs": ["storybook-static"]
    },
    "test:coverage": {
      "outputs": ["coverage"],
      "cache": false
    },
    "test:components": {
      "dependsOn": ["^build"],
      "outputs": ["playwright-report", "test-results", "blob-reports"],
      "cache": false
    },
    "test:integration": {
      "dependsOn": ["^build"],
      "outputs": ["playwright-report", "test-results", "blob-reports"],
      "cache": false
    },
    "turbo:dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    }
  }
}
