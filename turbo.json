{
  "$schema": "https://turbo.build/schema.json",
  "remoteCache": {
    "apiUrl": "https://turbo-remote-cache.apps.01.cf.eu01.stackit.cloud",
    "teamSlug": "onyx",
    "enabled": true
  },
  "globalPassThroughEnv": ["PW_SHARD", "PW_TOTAL_SHARDS", "PW_UPDATE_SNAPSHOTS"],
  "globalDependencies": ["pnpm-lock.yaml", "stylelint.config.js"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "src/.vitepress/dist/**", ".nuxt/**"]
    },
    "build:storybook": {
      "dependsOn": ["build"],
      "outputs": ["storybook-static"]
    },
    "test:coverage": {
      "outputs": ["coverage"],
      "cache": false
    },
    "test:eslint-plugins": {
      "cache": false
    },
    "test:playwright": {
      "dependsOn": ["build"],
      "outputs": ["playwright-report", "test-results", "blob-reports"],
      "cache": false
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "stylelint": {
      "dependsOn": ["^build"]
    }
  }
}
