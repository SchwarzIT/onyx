{
  "type": "module",
  "packageManager": "pnpm@8.14.1",
  "author": "Schwarz IT KG",
  "license": "Apache-2.0",
  "scripts": {
    "build:all": "pnpm -r --if-present '/^build/'",
    "test:all": "pnpm -r --if-present test:coverage",
    "test:components:all": "pnpm -r --if-present --sequential  test:components",
    "format:all": "prettier --write .",
    "format:check:all": "prettier --check .",
    "lint:all": "eslint . --ext .vue,.ts,.tsx --ignore-path .gitignore",
    "lint:fix:all": "pnpm run lint:all --fix",
    "lint:ci:all": "pnpm run lint:all --format @microsoft/eslint-formatter-sarif --output-file eslint-results.sarif",
    "publint:all": "pnpm -r --parallel --aggregate-output exec publint",
    "prepare": "simple-git-hooks",
    "preinstall": "npx only-allow pnpm"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@microsoft/eslint-formatter-sarif": "^3.0.0",
    "@playwright/experimental-ct-vue": "^1.43.0",
    "@playwright/test": "^1.43.0",
    "@rushstack/eslint-patch": "^1.10.1",
    "@sit-onyx/eslint-plugin": "workspace:^",
    "@sit-onyx/storybook-utils": "workspace:^",
    "@storybook/addon-essentials": "^8.0.6",
    "@storybook/blocks": "^8.0.6",
    "@storybook/vue3": "^8.0.6",
    "@storybook/vue3-vite": "^8.0.6",
    "@tsconfig/node20": "^20.1.4",
    "@types/jsdom": "^21.1.6",
    "@types/node": "^20.12.5",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vitest/coverage-v8": "^1.4.0",
    "@vue/compiler-dom": "^3.4.21",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^13.0.0",
    "@vue/tsconfig": "~0.5.1",
    "eslint": "^8.57.0",
    "eslint-plugin-playwright": "^1.5.4",
    "eslint-plugin-vue": "^9.24.0",
    "eslint-plugin-vuejs-accessibility": "^2.2.1",
    "jsdom": "^24.0.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "publint": "^0.2.7",
    "rimraf": "^5.0.5",
    "sass": "^1.74.1",
    "simple-git-hooks": "^2.11.1",
    "storybook": "^8.0.6",
    "typescript": "~5.4.4",
    "vite": "^5.2.8",
    "vite-plugin-dts": "^3.8.1",
    "vitest": "^1.4.0",
    "vue": "^3.4.21",
    "vue-tsc": "^2.0.11"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "prettier --write -u",
    "*.{vue,ts,tsx}": "eslint --fix --ignore-path .gitignore"
  }
}
