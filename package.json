{
  "name": "onyx-monorepo",
  "type": "module",
  "packageManager": "pnpm@10.11.0",
  "author": "Schwarz IT KG",
  "license": "Apache-2.0",
  "scripts": {
    "dev": "./scripts/dev.sh",
    "build:all": "turbo run build build:storybook",
    "test:all": "vitest --coverage",
    "test:playwright:all": "turbo run test:playwright --concurrency 1",
    "format:all": "prettier --write .",
    "format:check:all": "prettier --check .",
    "stylelint": "turbo run stylelint",
    "lint:all": "eslint .",
    "lint:fix:all": "pnpm run lint:all --fix",
    "lint:ci:all": "SARIF_ESLINT_IGNORE_SUPPRESSED=true pnpm run lint:all --format @microsoft/eslint-formatter-sarif --output-file eslint-results.sarif",
    "publint:all": "pnpm -r --parallel --no-reporter-hide-prefix exec publint",
    "prepare": "simple-git-hooks",
    "gh:show-report": "./scripts/show-last-test-report.sh",
    "preinstall": "npx only-allow pnpm"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.4",
    "@eslint-community/eslint-plugin-eslint-comments": "^4.5.0",
    "@eslint-community/eslint-utils": "^4.7.0",
    "@eslint/compat": "^1.3.0",
    "@eslint/js": "^9.28.0",
    "@fontsource-variable/source-code-pro": "^5.2.5",
    "@fontsource-variable/source-sans-3": "^5.2.7",
    "@microsoft/eslint-formatter-sarif": "^3.1.0",
    "@playwright/experimental-ct-vue": "catalog:",
    "@playwright/test": "catalog:",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/blocks": "^8.6.14",
    "@storybook/vue3": "^8.6.14",
    "@storybook/vue3-vite": "^8.6.14",
    "@tsconfig/node24": "^24.0.1",
    "@types/eslint": "^9.6.1",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.0.0",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vitest/coverage-v8": "^3.1.4",
    "@vitest/eslint-plugin": "^1.2.1",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.5.0",
    "@vue/tsconfig": "~0.7.0",
    "eslint": "^9.27.0",
    "eslint-plugin-compat": "^6.0.2",
    "eslint-plugin-playwright": "^2.2.0",
    "eslint-plugin-vue": "^10.1.0",
    "eslint-plugin-vue-scoped-css": "^2.10.0",
    "eslint-plugin-vuejs-accessibility": "^2.4.1",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.0.0",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "publint": "^0.3.12",
    "rimraf": "^6.0.1",
    "simple-git-hooks": "^2.13.0",
    "storybook": "^8.6.14",
    "stylelint": "^16.19.1",
    "stylelint-no-unsupported-browser-features": "^8.0.4",
    "turbo": "^2.5.3",
    "typescript": "catalog:",
    "typescript-eslint": "^8.32.1",
    "vite": "catalog:",
    "vitest": "^3.1.4",
    "vue-tsc": "^2.2.10"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": [
      "prettier --write -u",
      "eslint --fix"
    ]
  },
  "pnpm": {
    "overrides": {
      "@playwright/experimental-ct-vue": "catalog:",
      "@playwright/test": "catalog:",
      "@vue/compiler-core": "catalog:",
      "@vue/compiler-dom": "catalog:",
      "@vue/compiler-sfc": "catalog:",
      "@vue/compiler-ssr": "catalog:",
      "@vue/shared": "catalog:",
      "playwright": "catalog:",
      "playwright-core": "catalog:",
      "vite": "catalog:",
      "vue": "catalog:",
      "sass-embedded": "catalog:"
    }
  }
}
