{
  "name": "@sit-onyx/nuxt",
  "version": "1.0.1",
  "description": "A Nuxt module to easily integrate onyx into Nuxt projects",
  "type": "module",
  "author": "Schwarz IT KG",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=20"
  },
  "homepage": "https://onyx.schwarz",
  "repository": {
    "type": "git",
    "url": "https://github.com/SchwarzIT/onyx",
    "directory": "packages/nuxt"
  },
  "bugs": {
    "url": "https://github.com/SchwarzIT/onyx/issues"
  },
  "exports": {
    ".": {
      "types": "./dist/types.d.mts",
      "import": "./dist/module.mjs",
      "require": "./dist/module.mjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "nuxi dev playground",
    "dev:build": "nuxi build playground",
    "dev:prepare": "nuxt-module-build build --stub && nuxt-module-build prepare && nuxi prepare playground",
    "build": "pnpm run dev:prepare && nuxt-module-build build",
    "type-check": "vue-tsc --noEmit && cd playground && vue-tsc --noEmit",
    "test": "vitest",
    "test:playwright": "playwright install && playwright test",
    "test:coverage": "vitest run --coverage"
  },
  "peerDependencies": {
    "sit-onyx": "workspace:^"
  },
  "devDependencies": {
    "@nuxt/devtools": "^3.1.1",
    "@nuxt/kit": "^4.3.0",
    "@nuxt/module-builder": "^1.0.2",
    "@nuxt/schema": "^4.3.0",
    "@nuxt/test-utils": "^3.23.0",
    "@nuxtjs/i18n": "^10.2.1",
    "@sit-onyx/shared": "workspace:^",
    "nuxt": "catalog:",
    "sit-onyx": "workspace:^",
    "typescript": "catalog:",
    "vue-i18n": "^11.2.8"
  }
}
