{
  "extends": ["@vue/tsconfig/tsconfig.dom.json", "@vue/tsconfig/tsconfig.lib.json"],
  "include": ["env.d.ts", "src/**/*"],
  "exclude": ["src/**/*.ct.*", "src/**/*.spec.*", "src/**/*.stories.ts", "src/**/*.ct.vue"],
  "compilerOptions": {
    "composite": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": ".",
    "lib": ["ES2022", "DOM"],
    "module": "node16",
    "moduleResolution": "node16"
  }
}
